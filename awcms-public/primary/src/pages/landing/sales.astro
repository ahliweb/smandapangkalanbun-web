---
import Layout from "~/layouts/LandingLayout.astro";

import Hero2 from "~/components/widgets/Hero2.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";

import { getLocale, t } from "~/utils/i18n";

const locale = getLocale(Astro.request);

const metadata = {
  title: t("landing.sales.metadata.title", locale),
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline={t("landing.sales.hero.tagline", locale)}
    title={t("landing.sales.hero.title", locale)}
    subtitle={t("landing.sales.hero.subtitle", locale)}
    actions={[
      {
        variant: "primary",
        text: t("landing.hero.actions.cta", locale),
        href: "#",
        icon: "tabler:square-rounded-arrow-right",
      },
      { text: t("landing.hero.actions.learn_more", locale), href: "#" },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1621452773781-0f992fd1f5cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1626&q=80",
      alt: t("landing.sales.hero.image_alt", locale),
    }}
  />

  <CallToAction
    title={t("landing.coming_soon.title", locale)}
    subtitle={t("landing.coming_soon.subtitle", locale)}
    actions={[
      {
        variant: "primary",
        text: t("landing.coming_soon.action", locale),
        href: "https://github.com/arthelokyo/astrowind",
        icon: "tabler:download",
      },
    ]}
  />
</Layout>
