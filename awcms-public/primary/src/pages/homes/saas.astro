---
import Layout from "~/layouts/PageLayout.astro";

import Header from "~/components/widgets/Header.astro";
import Hero2 from "~/components/widgets/Hero2.astro";
import Features from "~/components/widgets/Features.astro";
import Steps2 from "~/components/widgets/Steps2.astro";
import Content from "~/components/widgets/Content.astro";
import Pricing from "~/components/widgets/Pricing.astro";

import { headerData } from "~/navigation";
import FAQs from "~/components/widgets/FAQs.astro";
import BlogLatestPosts from "~/components/widgets/BlogLatestPosts.astro";
import { getLocale, t } from "~/utils/i18n";

const locale = getLocale(Astro.request);

const metadata = {
  title: t("homes.saas.metadata.title", locale),
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: "secondary",
          text: t("homes.saas.header.actions.login", locale),
          href: "#",
        },
        {
          variant: "primary",
          text: t("homes.saas.header.actions.sign_up", locale),
          href: "#",
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline={t("homes.saas.hero.tagline", locale)}
    actions={[
      {
        variant: "primary",
        target: "_blank",
        text: t("homes.saas.hero.actions.get_started", locale),
        href: "https://github.com/arthelokyo/astrowind",
      },
      {
        text: t("homes.saas.hero.actions.learn_more", locale),
        href: "#features",
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1580481072645-022f9a6dbf27?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80",
      alt: "AstroWind Hero Image",
    }}
  >
    <Fragment slot="title">
      <span set:html={t("homes.saas.hero.title", locale)} />
    </Fragment>

    <Fragment slot="subtitle">
      <span set:html={t("homes.saas.hero.subtitle", locale)} />
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title={t("homes.saas.features.title", locale)}
    subtitle={t("homes.saas.features.subtitle", locale)}
    columns={2}
    items={[
      {
        title: t("homes.saas.features.items.0.title", locale),
        description: t("homes.saas.features.items.0.description", locale),
        icon: "tabler:layers-union",
      },
      {
        title: t("homes.saas.features.items.1.title", locale),
        description: t("homes.saas.features.items.1.description", locale),
        icon: "tabler:artboard",
      },
      {
        title: t("homes.saas.features.items.2.title", locale),
        description: t("homes.saas.features.items.2.description", locale),
        icon: "tabler:writing",
      },
      {
        title: t("homes.saas.features.items.3.title", locale),
        description: t("homes.saas.features.items.3.description", locale),
        icon: "tabler:podium",
      },
      {
        title: t("homes.saas.features.items.4.title", locale),
        description: t("homes.saas.features.items.4.description", locale),
        icon: "tabler:rocket",
      },
      {
        title: t("homes.saas.features.items.5.title", locale),
        description: t("homes.saas.features.items.5.description", locale),
        icon: "tabler:eyeglass",
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title={t("homes.saas.use_cases.use_cases_title", locale)}
    subtitle={t("homes.saas.use_cases.use_cases_subtitle", locale)}
    isReversed
    items={[
      {
        title: t("homes.saas.use_cases.startup.description_title", locale),
        description: t("homes.saas.use_cases.startup.description", locale),
      },
      {
        title: t("homes.saas.use_cases.startup.benefits_title", locale),
        description: t("homes.saas.use_cases.startup.benefits", locale),
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1620558138198-cfb9b4f3c294?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1671&q=80",
      alt: "Startup Image",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        <span
          set:html={t("homes.saas.use_cases.startup.content_title", locale)}
        />
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent={true}
    items={[
      {
        title: t("homes.saas.use_cases.saas.description_title", locale),
        description: t("homes.saas.use_cases.saas.description", locale),
      },
      {
        title: t("homes.saas.use_cases.saas.benefits_title", locale),
        description: t("homes.saas.use_cases.saas.benefits", locale),
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1531973486364-5fa64260d75b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1658&q=80",
      alt: "SaaS Businesses Image",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        <span set:html={t("homes.saas.use_cases.saas.content_title", locale)} />
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: t("homes.saas.use_cases.portfolio.description_title", locale),
        description: t("homes.saas.use_cases.portfolio.description", locale),
      },
      {
        title: t("homes.saas.use_cases.portfolio.benefits_title", locale),
        description: t("homes.saas.use_cases.portfolio.benefits", locale),
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1635070041078-e363dbe005cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80",
      alt: "Portfolio Image",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        <span
          set:html={t("homes.saas.use_cases.portfolio.content_title", locale)}
        />
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    items={[
      {
        title: t(
          "homes.saas.use_cases.small_business.description_title",
          locale,
        ),
        description: t(
          "homes.saas.use_cases.small_business.description",
          locale,
        ),
      },
      {
        title: t("homes.saas.use_cases.small_business.benefits_title", locale),
        description: t("homes.saas.use_cases.small_business.benefits", locale),
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1514621166532-aa7eb1a3a2f4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80",
      alt: "Small Business Image",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        <span
          set:html={t(
            "homes.saas.use_cases.small_business.content_title",
            locale,
          )}
        />
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Pricing Widget ******************* -->

  <Pricing
    title={t("homes.saas.pricing.title", locale)}
    prices={[
      {
        title: t("homes.saas.pricing.plans.0.title", locale),
        subtitle: t("homes.saas.pricing.plans.0.subtitle", locale),
        price: "0",
        period: "/ month",
        callToAction: {
          target: "_blank",
          text: t("homes.saas.pricing.plans.0.call_to_action", locale),
          href: "#",
        },
      },
      {
        title: t("homes.saas.pricing.plans.1.title", locale),
        subtitle: t("homes.saas.pricing.plans.1.subtitle", locale),
        price: 15,
        period: "/ Month",
        callToAction: {
          target: "_blank",
          text: t("homes.saas.pricing.plans.1.call_to_action", locale),
          href: "#",
        },
        hasRibbon: true,
        ribbonTitle: t("homes.saas.pricing.plans.1.ribbon_title", locale),
      },
      {
        title: t("homes.saas.pricing.plans.2.title", locale),
        subtitle: t("homes.saas.pricing.plans.2.subtitle", locale),
        price: 45,
        period: "/ Month",
        callToAction: {
          target: "_blank",
          text: t("homes.saas.pricing.plans.2.call_to_action", locale),
          href: "#",
        },
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title={t("homes.saas.faqs.title", locale)}
    items={[
      {
        title: t("homes.saas.faqs.items.0.title", locale),
        description: t("homes.saas.faqs.items.0.description", locale),
        icon: "tabler:chevrons-right",
      },
      {
        title: t("homes.saas.faqs.items.1.title", locale),
        description: t("homes.saas.faqs.items.1.description", locale),
        icon: "tabler:chevrons-right",
      },
      {
        title: t("homes.saas.faqs.items.2.title", locale),
        description: t("homes.saas.faqs.items.2.description", locale),
        icon: "tabler:chevrons-right",
      },
      {
        title: t("homes.saas.faqs.items.3.title", locale),
        description: t("homes.saas.faqs.items.3.description", locale),
        icon: "tabler:chevrons-right",
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title={t("homes.saas.contact.title", locale)}
    subtitle={t("homes.saas.contact.subtitle", locale)}
    callToAction={{
      text: t("homes.saas.contact.call_to_action", locale),
      href: "/",
    }}
    items={[
      {
        title: t("homes.saas.contact.items.email", locale),
        description: "contact@support.com",
        icon: "tabler:mail",
      },
      {
        title: t("homes.saas.contact.items.call", locale),
        description: "+1 (234) 567-890",
        icon: "tabler:headset",
      },
      {
        title: t("homes.saas.contact.items.follow", locale),
        description: "@example",
        icon: "tabler:brand-twitter",
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title={t("homes.saas.blog_latest.title", locale)}
    information={t("homes.saas.blog_latest.information", locale)}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
