---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";

import Features2 from "~/components/widgets/Features2.astro";
import Features from "~/components/widgets/Features.astro";
import Stats from "~/components/widgets/Stats.astro";
import Features3 from "~/components/widgets/Features3.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import Brands from "~/components/widgets/Brands.astro";
import { getLocale, t } from "~/utils/i18n";

import { YouTube } from "astro-embed";

const locale = getLocale(Astro.request);

const metadata = {
  title: t("homes.startup.metadata.title", locale),
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline={t("homes.startup.hero.tagline", locale)}
    actions={[
      {
        variant: "primary",
        target: "_blank",
        text: t("homes.startup.hero.actions.get_templates", locale),
        href: "https://github.com/arthelokyo/astrowind",
        icon: "tabler:download",
      },
      {
        text: t("homes.startup.hero.actions.learn_more", locale),
        href: "#features",
      },
    ]}
  >
    <Fragment slot="title">
      <span set:html={t("homes.startup.hero.title", locale)} />
    </Fragment>

    <Fragment slot="subtitle">
      <span set:html={t("homes.startup.hero.subtitle", locale)} />
    </Fragment>

    <Fragment slot="image">
      <YouTube
        id="gxBkghlglTg"
        title="Astro just Launched.... Could it be the ultimate web framework?"
      />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title={t("homes.startup.about.title", locale)}
    subtitle={t("homes.startup.about.subtitle", locale)}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title={t("homes.startup.stats.title", locale)}
    subtitle={t("homes.startup.stats.subtitle", locale)}
    stats={[
      { title: t("homes.startup.stats.items.0.title", locale), amount: "182K" },
      { title: t("homes.startup.stats.items.1.title", locale), amount: "87" },
      { title: t("homes.startup.stats.items.2.title", locale), amount: "4.8" },
      { title: t("homes.startup.stats.items.3.title", locale), amount: "116K" },
    ]}
  />

  <!-- Brands Widget ****************** -->

  <Brands
    title={t("homes.startup.brands.title", locale)}
    subtitle={t("homes.startup.brands.subtitle", locale)}
    icons={[]}
    images={[
      {
        src: "https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png",
        alt: "Paypal",
      },
      {
        src: "https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png",
        alt: "Visa",
      },
      {
        src: "https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png",
        alt: "Ebay",
      },

      {
        src: "https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png",
        alt: "Youtube",
      },
      {
        src: "https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png",
        alt: "Microsoft",
      },
      {
        src: "https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png",
        alt: "Node JS",
      },
      {
        src: "https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png",
        alt: "Google",
      },
      {
        src: "https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png",
        alt: "Meta",
      },
      {
        src: "https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png",
        alt: "Yahoo",
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title={t("homes.startup.services.title", locale)}
    subtitle={t("homes.startup.services.subtitle", locale)}
    items={[
      {
        title: t("homes.startup.services.items.0.title", locale),
        description: t("homes.startup.services.items.0.description", locale),
        icon: "flat-color-icons:document",
      },
      {
        title: t("homes.startup.services.items.1.title", locale),
        description: t("homes.startup.services.items.1.description", locale),
        icon: "flat-color-icons:template",
      },
      {
        title: t("homes.startup.services.items.2.title", locale),
        description: t("homes.startup.services.items.2.description", locale),
        icon: "flat-color-icons:voice-presentation",
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title={t("homes.startup.features.title", locale)}
    subtitle={t("homes.startup.features.subtitle", locale)}
    columns={3}
    items={[
      {
        title: t("homes.startup.features.items.0.title", locale),
        description: t("homes.startup.features.items.0.description", locale),
        icon: "tabler:artboard",
      },
      {
        title: t("homes.startup.features.items.1.title", locale),
        description: t("homes.startup.features.items.1.description", locale),
        icon: "tabler:picture-in-picture",
      },
      {
        title: t("homes.startup.features.items.2.title", locale),
        description: t("homes.startup.features.items.2.description", locale),
        icon: "tabler:adjustments-horizontal",
      },
      {
        title: t("homes.startup.features.items.3.title", locale),
        description: t("homes.startup.features.items.3.description", locale),
        icon: "tabler:rocket",
      },
      {
        title: t("homes.startup.features.items.4.title", locale),
        description: t("homes.startup.features.items.4.description", locale),
        icon: "tabler:arrows-right-left",
      },
      {
        title: t("homes.startup.features.items.5.title", locale),
        description: t("homes.startup.features.items.5.description", locale),
        icon: "tabler:plug-connected",
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title={t("homes.startup.faqs.title", locale)}
    items={[
      {
        title: t("homes.startup.faqs.items.0.title", locale),
        description: t("homes.startup.faqs.items.0.description", locale),
      },
      {
        title: t("homes.startup.faqs.items.1.title", locale),
        description: t("homes.startup.faqs.items.1.description", locale),
      },
      {
        title: t("homes.startup.faqs.items.2.title", locale),
        description: t("homes.startup.faqs.items.2.description", locale),
      },
      {
        title: t("homes.startup.faqs.items.3.title", locale),
        description: t("homes.startup.faqs.items.3.description", locale),
      },
      {
        title: t("homes.startup.faqs.items.4.title", locale),
        description: t("homes.startup.faqs.items.4.description", locale),
      },
      {
        title: t("homes.startup.faqs.items.5.title", locale),
        description: t("homes.startup.faqs.items.5.description", locale),
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Features3 Widget ************** -->

  <Features3
    title={t("homes.startup.contact.title", locale)}
    subtitle={t("homes.startup.contact.subtitle", locale)}
    columns={4}
    items={[
      {
        title: t("homes.startup.contact.items.phone.title", locale),
        icon: "tabler:phone",
        callToAction: {
          target: "_blank",
          text: t("homes.startup.contact.items.phone.call_to_action", locale),
          href: "/",
          variant: "link",
        },
      },
      {
        title: t("homes.startup.contact.items.email.title", locale),
        icon: "tabler:mail",
        callToAction: {
          target: "_blank",
          text: t("homes.startup.contact.items.email.call_to_action", locale),
          href: "/",
          variant: "link",
        },
      },
      {
        title: t("homes.startup.contact.items.chat_sales.title", locale),
        icon: "tabler:message-circle",
        callToAction: {
          target: "_blank",
          text: t(
            "homes.startup.contact.items.chat_sales.call_to_action",
            locale,
          ),
          href: "/",
          variant: "link",
        },
      },
      {
        title: t("homes.startup.contact.items.chat_support.title", locale),
        icon: "tabler:message-circle",
        callToAction: {
          target: "_blank",
          text: t(
            "homes.startup.contact.items.chat_support.call_to_action",
            locale,
          ),
          href: "/",
          variant: "link",
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: "primary",
        target: "_blank",
        text: t("homes.startup.call_to_action.actions.get_templates", locale),
        href: "https://github.com/arthelokyo/astrowind",
        icon: "tabler:download",
      },
    ]}
  >
    <Fragment slot="title"
      >{t("homes.startup.call_to_action.title", locale)}</Fragment
    >

    <Fragment slot="subtitle">
      {t("homes.startup.call_to_action.subtitle", locale)}
    </Fragment>
  </CallToAction>
</Layout>
