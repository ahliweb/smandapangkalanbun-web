---
import Features2 from "~/components/widgets/Features2.astro";
import Features3 from "~/components/widgets/Features3.astro";
import Hero from "~/components/widgets/Hero.astro";
import Stats from "~/components/widgets/Stats.astro";
import Steps2 from "~/components/widgets/Steps2.astro";
import Layout from "~/layouts/PageLayout.astro";
import { getLocale, t } from "~/utils/i18n";

const locale = getLocale(Astro.request);

const metadata = {
  title: t("about.title", locale),
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline={t("about.hero.tagline", locale)}
    image={{
      src: "https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80",
      alt: "Caos Image",
    }}
  >
    <Fragment slot="title">
      <span set:html={t("about.hero.title_html", locale)} />
    </Fragment>

    <Fragment slot="subtitle">
      {t("about.hero.subtitle", locale)}
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title={t("about.stats.title", locale)}
    stats={[
      { title: t("about.stats.offices", locale), amount: "4" },
      { title: t("about.stats.employees", locale), amount: "248" },
      { title: t("about.stats.templates", locale), amount: "12" },
      { title: t("about.stats.awards", locale), amount: "24" },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title={t("about.features_templates.title", locale)}
    subtitle={t("about.features_templates.subtitle", locale)}
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: t("about.features_templates.items.educational.title", locale),
        description: t(
          "about.features_templates.items.educational.desc",
          locale,
        ),
        icon: "tabler:template",
      },
      {
        title: t("about.features_templates.items.interior.title", locale),
        description: t("about.features_templates.items.interior.desc", locale),
        icon: "tabler:template",
      },
      {
        title: t("about.features_templates.items.photography.title", locale),
        description: t(
          "about.features_templates.items.photography.desc",
          locale,
        ),
        icon: "tabler:template",
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: t("about.features_categories.items.ecommerce.title", locale),
        description: t(
          "about.features_categories.items.ecommerce.desc",
          locale,
        ),
        icon: "tabler:template",
      },
      {
        title: t("about.features_categories.items.blog.title", locale),
        description: t("about.features_categories.items.blog.desc", locale),
        icon: "tabler:template",
      },
      {
        title: t("about.features_categories.items.business.title", locale),
        description: t("about.features_categories.items.business.desc", locale),
        icon: "tabler:template",
      },
      {
        title: t("about.features_categories.items.branding.title", locale),
        description: t("about.features_categories.items.branding.desc", locale),
        icon: "tabler:template",
      },
      {
        title: t("about.features_categories.items.medical.title", locale),
        description: t("about.features_categories.items.medical.desc", locale),
        icon: "tabler:template",
      },
      {
        title: t("about.features_categories.items.fashion.title", locale),
        description: t("about.features_categories.items.fashion.desc", locale),
        icon: "tabler:template",
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80",
      alt: "Colorful Image",
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title={t("about.values.title", locale)}
    subtitle={t("about.values.subtitle", locale)}
    items={[
      {
        title: t("about.values.items.customer_centric.title", locale),
        description: t("about.values.items.customer_centric.desc", locale),
      },
      {
        title: t("about.values.items.improvement.title", locale),
        description: t("about.values.items.improvement.desc", locale),
      },
      {
        title: t("about.values.items.ethical.title", locale),
        description: t("about.values.items.ethical.desc", locale),
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title={t("about.achievements.title", locale)}
    subtitle={t("about.achievements.subtitle", locale)}
    isReversed={true}
    callToAction={{
      text: t("about.achievements.cta", locale),
      href: "/",
    }}
    items={[
      {
        title: t("about.achievements.items.global.title", locale),
        description: t("about.achievements.items.global.desc", locale),
        icon: "tabler:globe",
      },
      {
        title: t("about.achievements.items.feedback.title", locale),
        description: t("about.achievements.items.feedback.desc", locale),
        icon: "tabler:message-star",
      },
      {
        title: t("about.achievements.items.awards.title", locale),
        description: t("about.achievements.items.awards.desc", locale),
        icon: "tabler:award",
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title={t("about.locations.title", locale)}
    tagline={t("about.locations.tagline", locale)}
    columns={4}
    items={[
      {
        title: "EE.UU",
        description: "1234 Lorem Ipsum St, 12345, Miami",
      },
      {
        title: "Spain",
        description: "5678 Lorem Ipsum St, 56789, Madrid",
      },
      {
        title: "Australia",
        description: "9012 Lorem Ipsum St, 90123, Sydney",
      },
      {
        title: "Brazil",
        description: "3456 Lorem Ipsum St, 34567, SÃ£o Paulo",
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title={t("about.support.title", locale)}
    tagline={t("about.support.tagline", locale)}
    columns={2}
    items={[
      {
        title: t("about.support.items.chat.title", locale),
        description: t("about.support.items.chat.desc", locale),
        icon: "tabler:messages",
      },
      {
        title: t("about.support.items.call.title", locale),
        description: t("about.support.items.call.desc", locale),
        icon: "tabler:headset",
      },
    ]}
  />
</Layout>
