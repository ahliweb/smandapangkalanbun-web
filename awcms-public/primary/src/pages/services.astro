---
import CallToAction from "~/components/widgets/CallToAction.astro";
import Content from "~/components/widgets/Content.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Hero from "~/components/widgets/Hero.astro";
import Testimonials from "~/components/widgets/Testimonials.astro";
import Layout from "~/layouts/PageLayout.astro";
import { getLocale, t } from "~/utils/i18n";

const locale = getLocale(Astro.request);

const metadata = {
  title: t("services_page.hero.tagline", locale),
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline={t("services_page.hero.tagline", locale)}
    title={t("services_page.hero.title", locale)}
    subtitle={t("services_page.hero.subtitle", locale)}
    actions={[
      {
        variant: "primary",
        target: "_blank",
        text: t("services_page.hero.cta", locale),
        href: "/",
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80",
      alt: "AstroWind Hero Image",
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title={t("services_page.features.title", locale)}
    subtitle={t("services_page.features.subtitle", locale)}
    columns={3}
    items={[
      {
        title:
          t("services_page.features.items.educational.title", locale) ||
          "Educational",
        description: t("services_page.features.items.educational", locale),
        icon: "tabler:school",
      },
      {
        title:
          t("services_page.features.items.interior.title", locale) ||
          "Interior Design",
        description: t("services_page.features.items.interior", locale),
        icon: "tabler:home-star",
      },
      {
        title:
          t("services_page.features.items.photography.title", locale) ||
          "Photography",
        description: t("services_page.features.items.photography", locale),
        icon: "tabler:photo",
      },
      {
        title:
          t("services_page.features.items.ecommerce.title", locale) ||
          "E-commerce",
        description: t("services_page.features.items.ecommerce", locale),
        icon: "tabler:shopping-cart",
      },
      {
        title: t("services_page.features.items.blog.title", locale) || "Blog",
        description: t("services_page.features.items.blog", locale),
        icon: "tabler:article",
      },
      {
        title:
          t("services_page.features.items.business.title", locale) ||
          "Business",
        description: t("services_page.features.items.business", locale),
        icon: "tabler:building-store",
      },
      {
        title:
          t("services_page.features.items.branding.title", locale) ||
          "Branding",
        description: t("services_page.features.items.branding", locale),
        icon: "tabler:arrow-big-up-lines",
      },
      {
        title:
          t("services_page.features.items.medical.title", locale) || "Medical",
        description: t("services_page.features.items.medical", locale),
        icon: "tabler:vaccine",
      },
      {
        title:
          t("services_page.features.items.fashion.title", locale) ||
          "Fashion Design",
        description: t("services_page.features.items.fashion", locale),
        icon: "tabler:tie",
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: t("services_page.main_features.items.quality.title", locale),
        description: t(
          "services_page.main_features.items.quality.desc",
          locale,
        ),
        icon: "tabler:wand",
      },
      {
        title: t(
          "services_page.main_features.items.customization.title",
          locale,
        ),
        description: t(
          "services_page.main_features.items.customization.desc",
          locale,
        ),
        icon: "tabler:settings",
      },
      {
        title: t("services_page.main_features.items.elements.title", locale),
        description: t(
          "services_page.main_features.items.elements.desc",
          locale,
        ),
        icon: "tabler:presentation",
      },
      {
        title: t("services_page.main_features.items.preview.title", locale),
        description: t(
          "services_page.main_features.items.preview.desc",
          locale,
        ),
        icon: "tabler:carousel-horizontal",
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1525909002-1b05e0c869d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80",
      alt: "Features Image",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        {t("services_page.main_features.title", locale)}
      </h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: t("services_page.benefits.items.time", locale),
        description: t("services_page.benefits.items.time_desc", locale),
        icon: "tabler:clock",
      },
      {
        title: t("services_page.benefits.items.appearance", locale),
        description: t("services_page.benefits.items.appearance_desc", locale),
        icon: "tabler:school",
      },
      {
        title: t("services_page.benefits.items.cost", locale),
        description: t("services_page.benefits.items.cost_desc", locale),
        icon: "tabler:coin",
      },
      {
        title: t("services_page.benefits.items.download", locale),
        description: t("services_page.benefits.items.download_desc", locale),
        icon: "tabler:file-download",
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1552664688-cf412ec27db2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80",
      alt: "Benefits Image",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        {t("services_page.benefits.title", locale)}
      </h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title={t("services_page.testimonials.title", locale)}
    testimonials={[
      {
        testimonial: `The designs are not only visually appealing but also highly professional. The templates have saved me a significant amount of time while helping me make a lasting impression on my clients.`,
        name: "Emily Kennedy",
        job: "Front-end developer",
        image: {
          src: "https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80",
          alt: "Emily Kennedy Image",
        },
      },
      {
        testimonial: `It beautifully showcases my work, with its clean and elegant design that lets my photographs shine. Customization was a breeze, even for a non-tech person like me. The result is a professional and immersive portfolio that's garnered numerous compliments.`,
        name: "Sarah Hansen",
        job: "Photographer",
        image: {
          src: "https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80",
          alt: "Sarah Hansen Image",
        },
      },
      {
        testimonial: `I discovered these templates and I'm impressed by their variety and quality. They've helped me establish a consistent brand image across my marketing and social platforms, elevating my business's overall appearance.`,
        name: "Mark Wilkinson",
        job: "Small business owner",
        image: {
          src: "https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80",
          alt: "Mark Wilkinson Image",
        },
      },
    ]}
    callToAction={{
      target: "_blank",
      text: t("services_page.testimonials.cta", locale),
      href: "https://github.com/arthelokyo/astrowind",
      icon: "tabler:chevron-right",
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: "primary",
        text: t("services_page.cta.action", locale),
        href: "/",
      },
    ]}
    title={t("services_page.cta.title", locale)}
    subtitle={t("services_page.cta.subtitle", locale)}
  />
</Layout>
