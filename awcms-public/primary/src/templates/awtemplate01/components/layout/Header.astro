---
import { tenantUrl } from '../../../../lib/url';

export interface MenuItem {
    label: string;
    url: string;
    children?: MenuItem[];
}

export interface Props {
    siteName?: string;
    logoUrl?: string;
    menuItems?: MenuItem[];
    tenantSlug?: string;
}

const { siteName = 'AWCMS', logoUrl, menuItems = [], tenantSlug = 'primary' } = Astro.props;

// Helper to build URL
const getUrl = (path: string) => tenantUrl(tenantSlug, path);
---

<header class="awt01-header sticky top-0 z-50 backdrop-blur-sm bg-background/95 border-b border-border">
    <div class="awt01-container flex items-center justify-between h-full">
        <!-- Logo / Site Name -->
        <a href={getUrl('/')} class="flex items-center gap-3 font-bold text-xl text-foreground hover:text-primary transition-colors">
            {logoUrl ? (
                <img src={logoUrl} alt={siteName} class="h-8 w-auto" />
            ) : (
                <span>{siteName}</span>
            )}
        </a>

        <!-- Navigation -->
        <nav class="hidden md:flex items-center gap-6">
            {menuItems.length > 0 ? (
                menuItems.map((item) => (
                    <a 
                        href={getUrl(item.url)} 
                        class="text-foreground/80 hover:text-foreground transition-colors font-medium"
                    >
                        {item.label}
                    </a>
                ))
            ) : (
                <>
                    <a href={getUrl('/')} class="text-foreground/80 hover:text-foreground transition-colors font-medium">Home</a>
                    <a href={getUrl('/articles')} class="text-foreground/80 hover:text-foreground transition-colors font-medium">Articles</a>
                    <a href={getUrl('/contact')} class="text-foreground/80 hover:text-foreground transition-colors font-medium">Contact</a>
                </>
            )}
        </nav>

        <!-- Mobile Menu Button -->
        <button 
            class="md:hidden p-2 text-foreground hover:bg-muted rounded-lg transition-colors"
            aria-label="Toggle menu"
            id="mobile-menu-toggle"
        >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-border bg-background">
        <nav class="awt01-container py-4 flex flex-col gap-2">
            {menuItems.length > 0 ? (
                menuItems.map((item) => (
                    <a 
                        href={getUrl(item.url)} 
                        class="py-2 text-foreground/80 hover:text-foreground transition-colors font-medium"
                    >
                        {item.label}
                    </a>
                ))
            ) : (
                <>
                    <a href={getUrl('/')} class="py-2 text-foreground/80 hover:text-foreground transition-colors font-medium">Home</a>
                    <a href={getUrl('/articles')} class="py-2 text-foreground/80 hover:text-foreground transition-colors font-medium">Articles</a>
                    <a href={getUrl('/contact')} class="py-2 text-foreground/80 hover:text-foreground transition-colors font-medium">Contact</a>
                </>
            )}
        </nav>
    </div>
</header>

<script>
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    
    toggle?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
    });
</script>
