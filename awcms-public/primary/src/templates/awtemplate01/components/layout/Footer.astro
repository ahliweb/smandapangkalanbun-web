---
import { tenantUrl } from '../../../../lib/url';

/**
 * awtemplate01 Footer
 * Site footer with links and copyright
 */
export interface Props {
    siteName?: string;
    year?: number;
    tenantSlug?: string;
}

const { siteName = 'AWCMS', year = new Date().getFullYear(), tenantSlug = 'primary' } = Astro.props;

// Helper
const getUrl = (path: string) => tenantUrl(tenantSlug, path);
---

<footer class="awt01-footer py-12">
    <div class="awt01-container">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
            <!-- Brand Column -->
            <div class="md:col-span-1">
                <h3 class="font-bold text-lg mb-4 text-foreground">{siteName}</h3>
                <p class="text-muted-foreground text-sm">
                    Building better digital experiences with modern web technology.
                </p>
            </div>

            <!-- Quick Links -->
            <div>
                <h4 class="font-semibold text-sm uppercase tracking-wider mb-4 text-foreground">Quick Links</h4>
                <ul class="space-y-2 text-sm">
                    <li><a href={getUrl('/')} class="text-muted-foreground hover:text-foreground transition-colors">Home</a></li>
                    <li><a href={getUrl('/about')} class="text-muted-foreground hover:text-foreground transition-colors">About</a></li>
                    <li><a href={getUrl('/services')} class="text-muted-foreground hover:text-foreground transition-colors">Services</a></li>
                    <li><a href={getUrl('/contact')} class="text-muted-foreground hover:text-foreground transition-colors">Contact</a></li>
                </ul>
            </div>

            <!-- Resources -->
            <div>
                <h4 class="font-semibold text-sm uppercase tracking-wider mb-4 text-foreground">Resources</h4>
                <ul class="space-y-2 text-sm">
                    <li><a href={getUrl('/blog')} class="text-muted-foreground hover:text-foreground transition-colors">Blog</a></li>
                    <li><a href={getUrl('/docs')} class="text-muted-foreground hover:text-foreground transition-colors">Documentation</a></li>
                    <li><a href={getUrl('/faq')} class="text-muted-foreground hover:text-foreground transition-colors">FAQ</a></li>
                    <li><a href={getUrl('/support')} class="text-muted-foreground hover:text-foreground transition-colors">Support</a></li>
                </ul>
            </div>

            <!-- Legal -->
            <div>
                <h4 class="font-semibold text-sm uppercase tracking-wider mb-4 text-foreground">Legal</h4>
                <ul class="space-y-2 text-sm">
                    <li><a href={getUrl('/privacy')} class="text-muted-foreground hover:text-foreground transition-colors">Privacy Policy</a></li>
                    <li><a href={getUrl('/terms')} class="text-muted-foreground hover:text-foreground transition-colors">Terms of Service</a></li>
                    <li><a href={getUrl('/cookies')} class="text-muted-foreground hover:text-foreground transition-colors">Cookie Policy</a></li>
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-sm text-muted-foreground">
                &copy; {year} {siteName}. All rights reserved.
            </p>
            <p class="text-xs text-muted-foreground">
                Powered by <a href="https://ahliweb.com" class="hover:text-foreground transition-colors" target="_blank" rel="noopener noreferrer">AWCMS</a>
            </p>
        </div>
    </div>
</footer>
